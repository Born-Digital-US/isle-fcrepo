<tomcat-users xmlns="http://tomcat.apache.org/xml"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://tomcat.apache.org/xml tomcat-users.xsd"
              version="1.0">
  
  <role rolename="admin-gui" />
  <role rolename="admin-script" />
  <role rolename="manager-gui" />
  <role rolename="manager-status" />
  <role rolename="manager-script" />
  <role rolename="manager-jmx" />
  <role rolename="fedoraUser"/>
  <role rolename="fedoraAdmin"/>

  <!-- user manager can access only manager section -->
  <user username="${FCREPO_TOMCAT_MANAGER}" password="${FCREPO_TOMCAT_MANAGER_PASSWORD}" roles="manager-gui,manager-status,manager-script,manager-jmx" />

  <!-- user admin can access manager and admin section both -->
  <user username="${FCREPO_TOMCAT_ADMIN}" password="${FCREPO_TOMCAT_ADMIN_PASSWORD}" roles="admin-gui,admin-script,manager-gui,manager-status,manager-script,manager-jmx" />

  <user username="fedoraUser" password="${FEDORA_USER_PASSWORD}" roles="fedoraUser" />
  <user username="fedoraAdmin" password="${FEDORA_ADMIN_PASSWORD}" roles="fedoraAdmin" />

</tomcat-users>